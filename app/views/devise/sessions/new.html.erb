<style>
  #sign_in_form{
    opacity: 0.9;
    border-radius: 100px 100px 100px 100px;
  }
  #forgot_password{
    border-bottom-left-radius: 120px;
    border-bottom-right-radius: 120px;
  }
</style>

<div id="sign_in_form" class="container col-md-4 mx-auto card">
  <h2 style="padding: 5px; text-align: center;">Sign In</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="field">
      <label for="InputEmail">Email address</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"email", class:"form-control", id:"InputEmail", placeholder:"Enter email" %>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <label for="InputPassword">Password</label>
      <%= f.password_field :password, autocomplete: "current-password", type:"password", class:"form-control", id:"InputPassword", placeholder:"Password" %>
    </div>
  </div>
    <div class="actions">
      <%= f.submit "Sign In", class:"btn btn-outline-primary btn-block" %>
    </div>
    <br>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
